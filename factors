#!/usr/bin/python3

def factorize_number(n):
    """
    Factorize a number n into two smaller numbers (p and q).
    Returns a tuple (p, q).
    """
    for p in range(2, int(n**0.5) + 1):
        if n % p == 0:
            q = n // p
            return p, q
    # If no factors found, return (n, 1) (prime number)
    return n, 1

def main(filename):
    try:
        with open(filename, 'r') as file:
            for line in file:
                try:
                    number = int(line.strip())
                    p, q = factorize_number(number)
                    print(f"{number} = {p} * {q}")
                except ValueError:
                    print(f"Invalid number in the file: {line.strip()}")
    except FileNotFoundError:
        print(f"File '{filename}' not found.")

if __name__ == "__main__":
    import sys
    if len(sys.argv) != 2:
        print("Usage: python factors.py <file>")
        sys.exit(1)
    filename = sys.argv[1]
    main(filename)
